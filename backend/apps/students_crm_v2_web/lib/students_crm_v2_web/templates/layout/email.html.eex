                    <h1><%= @main_title %></h1>
                  </td>
                </tr>
              </table>
            </td>
          </tr>

          <tr id='emailBody'>
            <td align='center' valign='top'>
              <table border='0' cellpadding='10' cellspacing='0' width='100%'>
                <%= render @view_module, @view_template, assigns %>
              </table>
            </td>
          </tr>

          <tr id='emailFooter'>
            <td align='center' valign='top'>
              <table border='0' cellpadding='10' cellspacing='0' width='100%'>
