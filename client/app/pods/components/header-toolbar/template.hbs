{{#paper-toolbar as |toolbar|}}
  {{#toolbar.tools}}
    {{#paper-button iconButton=true onClick=(action "toggle" "sidebarOpenState.lockedOpen")}}
      {{paper-icon "menu"}}
    {{/paper-button}}

    {{#unless session.isAuthenticated}}
      {{paper-link (t "header-toolbar.login") 'login' raised=true}}
    {{/unless}}
  {{/toolbar.tools}}
{{/paper-toolbar}}
