{{#paper-toolbar as |toolbar|}}
  {{#toolbar.tools}}
    {{#paper-button iconButton=true onClick=(action "toggle" "sidebarOpenState.lockedOpen")}}
      {{paper-icon "menu"}}
    {{/paper-button}}

    {{#unless session.isAuthenticated}}
      {{#paper-button onClick=(action "login") raised=true}}
        {{t "header-toolbar.login"}}
      {{/paper-button}}
    {{/unless}}
  {{/toolbar.tools}}
{{/paper-toolbar}}
